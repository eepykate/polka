#!/bin/sh
#  a glorified man for posix definitions
# it's up to you to find the files, good luck :)

d=$HOME/opt/posix

for i in "$d/"*/[0-9][0-9]-"$1"* "$d/"*"/$1"*; do
	[ -f "$i" ] && exec nvim -R "$i"
done

# lmao annaisms, enjoy your black text
printf 'spec not found: \033[38;5;16m%s\033[m\n' "$1"
