#!/bin/sh

local=$(date "+%F (%a) - %H:%M:%S")
day=$(date +%j)
set --
for i in Asia/Calcutta Europe/Berlin America/New_York America/Los_Angeles Australia/Perth Pacific/Auckland; do
	export TZ=$i
	[ "$(date +%j)" -ge "$day" ] && j=T || j=Y
	set -- "$@" "$j,$(date "+%H:%M")"
done

notify-send "$local" \
	"wat $5  |  nzt $6
ist $1  |  cet $2
est $3  |  pst $4
$(acpi)"
