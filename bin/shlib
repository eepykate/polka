#!/bin/sh
#  functions to make my life easier

# basically [ a = b ] with globbing
eq() {
	case $1 in
		$2) ;;
		*) return 1
	esac
}

# print word <x> from stdin
# example:
# $ echo a b c d e f | word 3 4 3
# c d c
word() {
	v=$*
	while read -r l; do
		set -- $l
		for i in $v; do
			# yucky yucky eval
			eval j="\$$i"
			printf '%s ' "$j"
		done
		prin
	done
}

# check if command exists
ex() { command -v "$@" >/dev/null 2>&1; }

# echo but safer (bash doesn't expand escape sequences)
prin() { printf '%b\n' "$*"; }

war() { printf '%b\n' "$*" >&2; }
die() { printf '%b\n' "$*" >&2; exit 1; }
