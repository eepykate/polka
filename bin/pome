#!/bin/sh
opt="$(printf "suspend\nreboot\nreboot (windows)\nreboot (firmware)\npoweroff" | menu)"
case $opt in
	*windows*) sudo refoot Windows;;
	*firmware*) sudo systemctl reboot --firmware;;
	*) sudo systemctl "$opt"
esac
[ "$opt" ] && sudo systemctl "$opt"
#[ "$opt" = reboot ] && sudo cp /etc/systemd/system/getty@tty1.service.d/override.conf{.backup,}
